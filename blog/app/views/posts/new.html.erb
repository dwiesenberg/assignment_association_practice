

<!-- new post -->
<div class="container">
  <h1>Practice With Collection Forms<h1>
  <h2>Add New Post</h2><br>

  <%= form_for @post do |f| %>

    <div class="row">
      <div class="col-md-12">

        <%= f.label :title %><br>
        <%= f.text_field :title, size: 60,
            placeholder: "Enter title here" %><br><br>


        <%= f.label :body %><br>
        <%= f.text_area :body, size: "60x5",
            placeholder: "Enter body contents here" %><br><br>

      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= f.label "Check/uncheck post tags" %><br>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name, {})   do |b| %>
          <%= b.label(class: "col-md-4"){b.check_box + " " + b.text } %>
        <% end %><br><br>

      </div>
    </div>

    <div class= "row">
      <div class = "col-md-12">
        <%= f.submit @post.persisted? ? "Update Post" : "Create New Post", class: "btn btn-large btn-primary btn-wide" %>
      </div>
    </div>

  <% end %>

</div>


  


